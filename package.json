{
	"name": "serialport-helper",
	"displayName": "Serial Port Helper",
	"description": "Serial Port Debug Tool",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
        "RS-232",
        "Serial Port",
        "IoT",
        "COM Port",
        "Arduino",
        "Debug",
        "IC"
    ],
	"activationEvents": [
		"onView:serialport"
	],
    "publisher": "hancel",
    "license": "MIT",
    "icon": "media/main.png",
	"main": "./src/extension.js",
    "repository": "https://github.com/imlinhanchao/vsc-serialport-helper",
	"contributes": {
		"commands": [
			{
				"command": "serialport.refreshEntry",
                "category": "Serial Port",
				"title": "%command.refresh%",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "serialport.sendEntry",
				"title": "%command.send%",
				"icon": {
					"light": "resources/light/send.svg",
					"dark": "resources/dark/send.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "serialport-view",
					"title": "%view.title%",
					"icon": "media/serial-port.svg"
				}
			]
		},
		"views": {
			"serialport-view": [
				{
					"id": "serialport",
					"name": "%view.subtitle%",
					"icon": "media/serial-port.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "serialport.refreshEntry",
					"when": "view == serialport",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "serialport.sendEntry",
					"when": "view == serialport && viewItem == serialport-item",
					"group": "inline"
				}
			],
			"commandPalette": [
				{
					"command": "serialport.sendEntry",
					"when": "false"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.40.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"node-usb-native": "^0.0.20"
	}
}
