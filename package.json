{
	"name": "serialport-helper",
	"displayName": "SerialPort Helper",
	"description": "SerialPort Debug Tool",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:serialport.helloWorld",
		"onView:serialport"
	],
    "icon": "media/main.svg",
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "serialport.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "serialport.refreshEntry",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "serialport.sendEntry",
				"title": "Send",
				"icon": {
					"light": "resources/light/send.svg",
					"dark": "resources/dark/send.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "serialport-view",
					"title": "Serial Port View",
					"icon": "media/serial-port.svg"
				}
			]
		},
		"views": {
			"serialport-view": [
				{
					"id": "serialport",
					"name": "List",
					"icon": "media/serial-port.svg"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "serialport.refreshEntry",
					"when": "view == serialport",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "serialport.sendEntry",
					"when": "view == serialport && viewItem == serialport-item",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.57.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"node-usb-native": "^0.0.20"
	}
}
